{%- liquid
  assign s = section.settings
-%}


<div class='md:flex'>
  <div class='md:w-1/2'>
    <h2 class='text-2xl'>{{- s.title -}}</h2>
    <div class='text'>{{- s.content -}}</div>
    
    {% unless s.cta_link == blank %}
      <a href={{ s.cta_link }}>
        {{- s.cta_text -}}
      </a>
      {{ s.message }}
    {% endunless %}
    
  </div>
  <div class='md:w-1/2'>
    {%- render 'component.image', img: s.image -%}
  </div>
</div>

{% schema %}
  {
    "name": "Text image",
    "tag": "section",
    "settings": [
      {
        "type": "image_picker",
        "id": "image",
        "label": "Image"
      },
      {
        "type": "text",
        "id": "title",
        "label": "Title"
      },
      {
        "type": "richtext",
        "id": "content",
        "label": "Content"
      },
      {
        "type": "url",
        "id": "cta_link",
        "label": "CTA link",
        "info": "If blank, no CTA is shown"
      },
      {
        "type": "text",
        "id": "cta_text",
        "label": "CTA text"
      }
    ],
    "presets": [
      {
        "name": "Text image"
      }
    ]
  }
{% endschema %}
